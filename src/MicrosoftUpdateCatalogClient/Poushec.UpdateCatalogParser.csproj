<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<PackageId>Poushec.UpdateCatalogParser</PackageId>
		<Version>2.2.0</Version>
		<Authors>Poushec</Authors>
		<Nullable>disable</Nullable>
		<ImplicitUsings>disable</ImplicitUsings>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageTags>microsoft-update-catalog</PackageTags>
		<PackageProjectUrl>https://github.com/Poushec/Poushec.UpdateCatalogParser</PackageProjectUrl>
		<RepositoryUrl>https://github.com/Poushec/Poushec.UpdateCatalogParser</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<Description>
			Little library developed to parse catalog.update.microsoft.com search results
		</Description>
		<OutputPath>../bin/$(Configuration)/$(Platform)/</OutputPath>
		<!-- Required to support AoT compilation, specially on .NET 8.0 -->
		<JsonSerializerIsReflectionEnabledByDefault>false</JsonSerializerIsReflectionEnabledByDefault>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="HtmlAgilityPack" Version="1.11.54" />
		<None Include="README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

</Project>
